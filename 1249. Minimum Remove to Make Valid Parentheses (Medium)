# https://leetcode.com/problems/minimum-remove-to-make-valid-parentheses/

# O(n) / O(n)
class Solution:
    def minRemoveToMakeValid(self, s: str) -> str:
        s_list = list(s)
        stack = []

        for idx, c in enumerate(s_list):
            if c == '(':
                stack.append(idx)
            elif c == ')':
                if stack:
                    stack.pop()
                else:
                    s_list[idx] = ''

        while stack:
            s_list[stack.pop()] = ''

        return ''.join(s_list)
