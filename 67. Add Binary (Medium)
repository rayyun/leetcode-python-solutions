# https://leetcode.com/problems/add-binary/

# O(max(n, m)) / O(max(n, m))
class Solution:
    def addBinary(self, a: str, b: str) -> str:
        L = max(len(a), len(b))
        
        a = a.zfill(L)
        b = b.zfill(L)
        res = []
        
        carry = 0
        
        for num_a, num_b in list(zip(a, b))[::-1]:
            total = carry + int(num_a) + int(num_b)
            carry, remain = divmod(total, 2)
            
            res.append(str(remain))
            
        if carry > 0:
            res.append(str(carry))
            
        return ''.join(res[::-1])
