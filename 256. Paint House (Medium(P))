# https://leetcode.com/problems/paint-house/

# Solution 1 - DP
# O(n) / O(1)
class Solution:
    def minCost(self, costs: List[List[int]]) -> int:
        N = len(costs)
        
        for i in range(1, N):
            costs[i][0] += min(costs[i-1][1], costs[i-1][2])
            costs[i][1] += min(costs[i-1][0], costs[i-1][2])
            costs[i][2] += min(costs[i-1][0], costs[i-1][1])
            
        return min(costs[-1])
