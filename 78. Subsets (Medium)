# https://leetcode.com/problems/subsets/description/

# Solution 1 - Brute Force
# O(N×2^N) / O(N×2^N) - 2^N : since each element could be absent or present.
class Solution:
    def subsets(self, nums: List[int]) -> List[List[int]]:
        N = len(nums)
        subsets = [[]]

        for num in nums:
            new_subsets = []

            for curr_set in subsets:
                temp = curr_set[:]
                temp.append(num)
                new_subsets.append(temp)

            subsets += new_subsets
        
        return subsets


    
    
# Solution 2 - Backtrack
# O(N×2^N) / O(N)
class Solution:
    def subsets(self, nums: List[int]) -> List[List[int]]:
        def backtrack(idx, curr):
            self.res.append(curr[:])

            for i in range(idx, len(nums)):
                curr.append(nums[i])
                backtrack(i + 1, curr)
                curr.pop()

        self.res = []
        backtrack(0, [])

        return self.res
