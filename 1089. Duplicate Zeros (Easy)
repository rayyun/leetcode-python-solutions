# O(n) / O(1)
class Solution:
    def duplicateZeros(self, arr: List[int]) -> None:
        """
        Do not return anything, modify arr in-place instead.
        """
        zeros = arr.count(0)
        length = len(arr)
        
        for i in range(length - 1, -1, -1):
            if i + zeros < length:
                arr[i + zeros] = arr[i]
            
            if arr[i] == 0:
                zeros -= 1
                
                if i + zeros < length:
                    arr[i + zeros] = 0
