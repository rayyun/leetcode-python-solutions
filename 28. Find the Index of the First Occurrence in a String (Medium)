# https://leetcode.com/problems/find-the-index-of-the-first-occurrence-in-a-string/

# O(n) / O(1)
class Solution:
    def strStr(self, haystack: str, needle: str) -> int:
        h_len = len(haystack)
        n_len = len(needle)

        if h_len < n_len:
            return -1

        for i in range(h_len - n_len + 1):
            if haystack[i: i + n_len] == needle:
                return i
        
        return -1
